<ResourceDictionary
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:oxard="clr-namespace:Oxard.XControls.Graphics;assembly=Oxard.XControls"
    x:Class="Oxard.XControls.DefaultStyles.ComponentThemes.Colors">

    <Color
        x:Key="ContentBackgroundColor">#1E1E1E</Color>
    <Color
        x:Key="ButtonForegroundColor">White</Color>
    <Color
        x:Key="ButtonDisableForegroundColor">#636363</Color>
    <Color
        x:Key="ButtonBackgroundColor">#686868</Color>
    <Color
        x:Key="ButtonPressedBackgroundColor">#9E9E9E</Color>
    <Color
        x:Key="ButtonDisableBackgroundColor">#282828</Color>

    <oxard:SolidColorBrush
        x:Key="ButtonBackgroundBrush"
        Color="{StaticResource ButtonBackgroundColor}" />

    <oxard:SolidColorBrush
        x:Key="ButtonPressedBackgroundBrush"
        Color="{StaticResource ButtonPressedBackgroundColor}" />

    <oxard:SolidColorBrush
        x:Key="ButtonDisableBackgroundBrush"
        Color="{StaticResource ButtonDisableBackgroundColor}" />

</ResourceDictionary>
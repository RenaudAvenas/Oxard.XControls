<?xml version="1.0" encoding="UTF-8"?>
<ContentView
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:shapes="clr-namespace:Oxard.XControls.Shapes;assembly=Oxard.XControls"
    xmlns:graphics="clr-namespace:Oxard.XControls.Graphics;assembly=Oxard.XControls"
    xmlns:componentthemes="clr-namespace:Oxard.XControls.DefaultStyles.ComponentThemes;assembly=Oxard.XControls.DefaultStyles"
    xmlns:defaultstyles="clr-namespace:Oxard.XControls.DefaultStyles;assembly=Oxard.XControls.DefaultStyles"
    BackgroundColor="{StaticResource Key={x:Static defaultstyles:ColorKeys.ContentBackgroundColor}}"
    x:Class="Oxard.TestApp.Views.ShapeView">
    <ContentView.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <componentthemes:Colors />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </ContentView.Resources>
    
    <Grid>
        <BoxView
            BackgroundColor="#608FE0" />
        <BoxView
            Margin="10"
            BackgroundColor="CornflowerBlue"/>
        <shapes:Rectangle
            CornerRadius="20"
            Margin="10"
            Stroke="Black"
            StrokeThickness="1"
            Fill="{x:Static graphics:Brushes.Aqua}"/>
        <BoxView
            WidthRequest="40"
            HeightRequest="40"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            BackgroundColor="CornflowerBlue" />
        <shapes:Ellipse
            Fill="{x:Static graphics:Brushes.Brown}"
            Stroke="Beige"
            StrokeThickness="1"
            WidthRequest="40"
            HeightRequest="40"
            VerticalOptions="Center"
            HorizontalOptions="Center" />
    </Grid>
</ContentView>